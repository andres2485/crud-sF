@model demo_crud.Models.Usuario






<h3 style="text-align:center">Editar Usuario</h3>

<hr />

<div class="container" style="margin-left:20em">

    <form method="post" action="@Url.Action("Editar","Usuarios")">

        <input type="hidden" name="Id" value="@Model.Id" />  <!--para saber que user se esta actualizando-->

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Nombre</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="Nombre" value="@Model.Nombre">
            </div>
            @Html.ValidationMessageFor(model => model.Nombre, null, new { @class = "text-danger" })
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Apellido</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="Apellido" value="@Model.Apellido">
            </div>
            @Html.ValidationMessageFor(model => model.Apellido, null, new { @class = "text-danger" })

        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Edad</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" name="Edad" value="@Model.Edad">
            </div>
            @Html.ValidationMessageFor(model => model.Edad, null, new { @class = "text-danger" })
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Direccion</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="Direccion" value="@Model.Direccion">
            </div>

            @Html.ValidationMessageFor(model => model.Direccion, null, new { @class = "text-danger" })
        </div>


        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Telefono</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" name="Telefono" value="@Model.Telefono"  min="55555555" max="999999999">
            </div>
            @Html.ValidationMessageFor(model => model.Telefono, null, new { @class = "text-danger" })
        </div>


        <div class="form-group row">
            <div class="col-sm-10" style="margin-left:20em">
                <button type="submit" class="btn btn-success">
                    <img src="~/fonts/guardar.ico" style="width:23px" />

                    Actualizar
                </button>
             
            </div>
        </div>
    </form>

</div>